{
  "compilerOptions": {
    // File Layout
    "rootDir": "src",
    "outDir": "dist",

    // Environment Settings
    "target": "ES2020",
    "module": "commonjs",

    // Node.js types
    "lib": ["esnext"],
    "types": ["node"],

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "skipLibCheck": true,

    // Interop & JSON
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Cosmetic
    "pretty": true
  }
}
